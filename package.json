{
  "name": "litelogs",
  "private": false,
  "version": "1.2.0",
  "type": "module",
  "homepage": "https://github.com/kourosh-alasti/litelogs#readme",
  "description": "TypeScript-first Logging Library",
  "main": "./dist/es/index.js",
  "scripts": {
    "build": "npm run build:clean && bunchee",
    "build:clean": "rm -rf ./dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "lint-staged",
    "publish": "npm publish",
    "prepare": "husky",
    "format": "prettier --write --config .prettierrc ."
  },
  "keywords": [
    "TypeScript",
    "Logger",
    "Middleware",
    "Server"
  ],
  "author": "Kourosh Alasti <coding@kouroshalasti.com>",
  "maintainers": [
    "kourosh-alasti"
  ],
  "contributors": [
    {
      "name": "kourosh-alasti",
      "url": "https://github.com/kourosh-alasti"
    }
  ],
  "publisher": "kourosh-alasti",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kourosh-alasti/litelogs.git"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.10.1",
    "bunchee": "^6.0.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "markdownlint": "^0.37.0",
    "prettier": "^3.4.2",
    "rollup": "^4.28.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0"
  },
  "peerDependencies": {
    "typescript": "^5.6.3"
  },
  "files": [
    "dist"
  ],
  "module": "./dist/es/index.js",
  "types": "./dist/es/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/es/index.d.ts",
        "default": "./dist/es/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    },
    "./utils": {
      "import": {
        "types": "./dist/es/utils.d.ts",
        "default": "./dist/es/utils.js"
      },
      "require": {
        "types": "./dist/cjs/utils.d.cts",
        "default": "./dist/cjs/utils.cjs"
      }
    },
    "./logger": {
      "import": {
        "types": "./dist/es/logger.d.ts",
        "default": "./dist/es/logger.js"
      },
      "require": {
        "types": "./dist/cjs/logger.d.cts",
        "default": "./dist/cjs/logger.cjs"
      }
    }
  }
}